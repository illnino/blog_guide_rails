<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Text:</b>
  <%= @post.text %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |c| %>
	<p><em>Comment: </em><%= c.text %></p>
	<p><%= time_ago_in_words(c.created_at) %></p>
<% end %>



<h2>Add a comment</h2>
<%= form_for [@post,@post.comments.new], :html=>{:class=>"form-horizontal"} do |f| %>
	<%= f.label "Comment" %>
	<%= f.text_area :text, :id=> 'abc' %>
	<%= f.submit :class=>"btn"%>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
